<Window x:Class="GenshinLauncher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GenshinLauncher"
        WindowStyle="SingleBorderWindow"
        ResizeMode="CanResize"
        mc:Ignorable="d"
        Title="MainWindow" Height="714" Width="1200">
    <WindowChrome.WindowChrome>
        <WindowChrome NonClientFrameEdges="None" GlassFrameThickness="0" ResizeBorderThickness="0" CaptionHeight="0" CornerRadius="5"/>
    </WindowChrome.WindowChrome>

    <Grid>
        <Image HorizontalAlignment="Left" Height="699" VerticalAlignment="Top" Width="1228" Margin="0,15,0,0" Source="/Splashscreen4_5_2.png"/>

        <Rectangle HorizontalAlignment="Right" Height="714" Margin="1128,0,0,0" VerticalAlignment="Center" Width="72" Fill="#7F000000"/>
        <StackPanel Orientation="Horizontal" Width="500" Background="#141414" MouseLeftButtonDown="mouse_MoveWindow" Height="30" VerticalAlignment="Top" Margin="0,0,700,0">
            <Label Content="Genshin Impact" Width="114" FontFamily="Bahnschrift Light" Foreground="White" VerticalAlignment="Center" FontSize="15" Margin="3,3,0,0"></Label>
            <Label Content="4.2.0" Width="218" FontFamily="Bahnschrift Light" Foreground="DimGray" VerticalAlignment="Center" FontSize="15" Margin="-5,3,0,0"></Label>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Width="710" Background="#141414" MouseLeftButtonDown="mouse_MoveWindow" Height="30" VerticalAlignment="Top" Margin="490,0,0,0" FlowDirection="RightToLeft">
            <Button x:Name="BtnMinimize" Content="X" Width="30" FontFamily="Cascadia Mono" FontWeight="Bold" FontSize="18" Background="Transparent" BorderBrush="Transparent" Foreground="White" Template="{StaticResource NoMouseOverButtonTemplate}" Click="btn_Close" MouseEnter="BtnClose_MouseEnter" MouseLeave="Btn_MouseLeave"/>
            <Button x:Name="BtnClose" Content="-" Width="30" FontFamily="Cascadia Mono" FontWeight="Bold" FontSize="18" Background="Transparent" BorderBrush="Transparent" Foreground="White" Template="{StaticResource NoMouseOverButtonTemplate}" Click="btn_Minimize" MouseEnter="BtnMinimize_MouseEnter" MouseLeave="Btn_MouseLeave"/>
        </StackPanel>
    </Grid>
</Window>
